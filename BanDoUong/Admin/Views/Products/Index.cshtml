    <!-- Main Content -->
    <main class="flex-1 ml-64 p-6 overflow-auto">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Danh sách sản phẩm</h2>
            @Html.ActionLink("Thêm sản phẩm", "Create", null, new { @class = "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded" })
        </div>

        <div class="bg-white rounded-lg shadow overflow-x-auto">
            <table class="min-w-full text-left text-sm border-collapse">
                <thead class="bg-gray-100 text-gray-700 uppercase text-xs">
                    <tr>
                        <th class="px-4 py-3">Tên</th>
                        <th class="px-4 py-3">Mô tả</th>
                        <th class="px-4 py-3">Giá</th>
                        <th class="px-4 py-3">Giá cũ</th>
                        <th class="px-4 py-3">Ảnh</th>
                        <th class="px-4 py-3">Danh mục</th>
                        <th class="px-4 py-3">Trạng thái</th>
                        <th class="px-4 py-3 text-center">Hành động</th>
                    </tr>
                </thead>

                <tbody class="divide-y">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-4 py-3 font-medium text-gray-900">@item.name</td>
                            <td class="px-4 py-3 text-gray-600 truncate max-w-xs">@item.description</td>
                            <td class="px-4 py-3 text-green-600 font-semibold">@item.price.ToString("N0") đ</td>
                            <td class="px-4 py-3 text-gray-500">@item.old_price</td>
                            <td class="px-4 py-3">
                                @{
                                    string pathImage = "~/Image_Water/" + item.thumbnail;
                                }
                                <img src="@Url.Content(pathImage)" class="w-16 h-12 object-cover rounded border" />
                            </td>
                            <td class="px-4 py-3">@item.category</td>
                            <td class="px-4 py-3">
                                @if (item.status)
                                {
                                    <span class="px-2 py-1 text-xs font-semibold text-green-700 bg-green-100 rounded">Còn hàng</span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 text-xs font-semibold text-red-700 bg-red-100 rounded">Hết hàng</span>
                                }
                            </td>
                            <td class="px-4 py-3 text-center space-x-2">
                                @Html.ActionLink("Xem", "Details", new { id = item.product_id }, new { @class = "text-blue-600 hover:underline" })
                                @Html.ActionLink("Sửa", "Edit", new { id = item.product_id }, new { @class = "text-yellow-600 hover:underline" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.product_id }, new { @class = "text-red-600 hover:underline" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

</body>
</html>
