@model Admin.Models.Product

@{
    ViewBag.Title = "Xóa sản phẩm";
    var path_image = "~/Image_Water/" + Model.thumbnail;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dashboard Quản trị</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex min-h-screen">

    <!-- Main Content -->
    <main class="flex-1 p-8 mx-auto max-w-4xl">
        <div class="bg-white rounded-xl shadow-lg p-8 border-t-4 border-red-500">
            <h2 class="text-2xl font-bold text-gray-800 mb-2">Xóa sản phẩm</h2>
            <p class="text-red-600 font-medium mb-6">
                ⚠️ Bạn có chắc chắn muốn xóa sản phẩm này không? Hành động này không thể hoàn tác.
            </p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="flex flex-col items-center">
                    <img src="@Url.Content(path_image)" alt="Ảnh sản phẩm"
                         class="w-48 h-48 object-cover rounded-lg shadow border mb-3" />
                    <h3 class="text-lg font-semibold text-gray-800">@Model.name</h3>
                    <p class="text-gray-500">@Model.category</p>
                </div>

                <div>
                    <dl class="divide-y divide-gray-200 text-sm">
                        <div class="py-2 flex justify-between">
                            <dt class="font-medium text-gray-700">Mô tả:</dt>
                            <dd class="text-gray-600 text-right ml-3">@Model.description</dd>
                        </div>

                        <div class="py-2 flex justify-between">
                            <dt class="font-medium text-gray-700">Giá hiện tại:</dt>
                            <dd class="text-green-600 font-semibold">@Model.price.ToString("N0")</dd>
                        </div>

                        <div class="py-2 flex justify-between">
                            <dt class="font-medium text-gray-700">Giá cũ:</dt>
                            <dd class="text-gray-500 line-through">@(Model.old_price?.ToString("N0") ?? "")</dd>
                        </div>

                        <div class="py-2 flex justify-between">
                            <dt class="font-medium text-gray-700">Trạng thái:</dt>
                            <dd>
                                @if (Model.status)
                                {
                                    <span class="px-2 py-1 text-xs font-semibold text-green-700 bg-green-100 rounded">Còn hàng</span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 text-xs font-semibold text-red-700 bg-red-100 rounded">Hết hàng</span>
                                }
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>

            <div class="mt-8 flex justify-between">
                <a href="@Url.Action("Index")"
                   class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded transition">
                    ← Quay lại danh sách
                </a>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded transition font-medium">
                        Xóa sản phẩm
                    </button>
                }
            </div>
        </div>
    </main>
</body>
</html>
