@model Admin.Models.Product

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
    var path_image = "~/Image_Water/" + Model.thumbnail;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dashboard Quản trị</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 flex min-h-screen">
    <main class="flex-1 ml-64 p-8">
        <div class="bg-white rounded-lg shadow-lg p-8 max-w-3xl mx-auto">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Chỉnh sửa sản phẩm</h2>

            @using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data", @class = "space-y-6" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-red-500 mb-4" })
                @Html.HiddenFor(model => model.product_id)

                <!-- Tên sản phẩm -->
                <div>
                    @Html.LabelFor(model => model.name, "Tên sản phẩm", new { @class = "block font-medium text-gray-700 mb-1" })
                    @Html.TextBoxFor(model => model.name, new { @class = "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-amber-500 focus:outline-none" })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Mô tả -->
                <div>
                    @Html.LabelFor(model => model.description, "Mô tả", new { @class = "block font-medium text-gray-700 mb-1" })
                    @Html.TextAreaFor(model => model.description, 4, 50, new { @class = "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-amber-500 focus:outline-none" })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Giá -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        @Html.LabelFor(model => model.price, "Giá", new { @class = "block font-medium text-gray-700 mb-1" })
                        @Html.TextBoxFor(model => model.price, new { @class = "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-amber-500 focus:outline-none" })
                        @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-red-500 text-sm" })
                    </div>

                    <div>
                        @Html.LabelFor(model => model.old_price, "Giá cũ", new { @class = "block font-medium text-gray-700 mb-1" })
                        @Html.TextBoxFor(model => model.old_price, new { @class = "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-amber-500 focus:outline-none" })
                        @Html.ValidationMessageFor(model => model.old_price, "", new { @class = "text-red-500 text-sm" })
                    </div>
                </div>

                <!-- Ảnh hiện tại -->
                <div>
                    <label class="block font-medium text-gray-700 mb-2">Ảnh hiện tại</label>
                    <img src="@Url.Content(path_image)" alt="Ảnh sản phẩm" class="w-40 h-40 object-cover rounded-lg border mb-3" />
                    <label class="block font-medium text-gray-700 mb-1">Chọn ảnh mới</label>
                    <input type="file" name="imageFile" class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-amber-500 file:text-white hover:file:bg-amber-600" />
                </div>

                <!-- Danh mục -->
                <div>
                    @Html.LabelFor(model => model.category, "Danh mục", new { @class = "block font-medium text-gray-700 mb-1" })
                    @Html.TextBoxFor(model => model.category, new { @class = "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-amber-500 focus:outline-none" })
                    @Html.ValidationMessageFor(model => model.category, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Trạng thái -->
                <div class="flex items-center space-x-3">
                    @Html.CheckBoxFor(model => model.status, new { @class = "w-5 h-5 text-amber-600 focus:ring-amber-500 border-gray-300 rounded" })
                    <label class="text-gray-700">Còn hàng</label>
                </div>

                <!-- Nút lưu -->
                <div class="flex justify-center space-x-4 pt-4 border-t mt-6">
                    <input type="submit" value="Lưu thay đổi" class="bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-2 rounded-lg transition" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition" })
                </div>
            }
        </div>
    </main>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
