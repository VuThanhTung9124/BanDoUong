@model Admin.Models.Product

@{
    ViewBag.Title = "Thêm sản phẩm";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex">

    

    <!-- Main Content -->
    <main class="flex-1 ml-64 p-6 overflow-auto">
        <div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Thêm sản phẩm mới</h2>

            @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="space-y-5">
                    <div>
                        @Html.LabelFor(m => m.name, "Tên sản phẩm", new { @class = "block font-semibold mb-1" })
                        @Html.TextBoxFor(m => m.name, new { @class = "w-full border rounded p-2 focus:ring-2 focus:ring-blue-500" })
                        @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-red-500 text-sm" })
                    </div>

                    <div>
                        @Html.LabelFor(m => m.description, "Mô tả", new { @class = "block font-semibold mb-1" })
                        @Html.TextAreaFor(m => m.description, new { @class = "w-full border rounded p-2 focus:ring-2 focus:ring-blue-500", rows = "4" })
                        @Html.ValidationMessageFor(m => m.description, "", new { @class = "text-red-500 text-sm" })
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            @Html.LabelFor(m => m.price, "Giá (VNĐ)", new { @class = "block font-semibold mb-1" })
                            @Html.TextBoxFor(m => m.price, new { @class = "w-full border rounded p-2 focus:ring-2 focus:ring-blue-500" })
                            @Html.ValidationMessageFor(m => m.price, "", new { @class = "text-red-500 text-sm" })
                        </div>

                        <div>
                            @Html.LabelFor(m => m.old_price, "Giá cũ", new { @class = "block font-semibold mb-1" })
                            @Html.TextBoxFor(m => m.old_price, new { @class = "w-full border rounded p-2 focus:ring-2 focus:ring-blue-500" })
                            @Html.ValidationMessageFor(m => m.old_price, "", new { @class = "text-red-500 text-sm" })
                        </div>
                    </div>

                    <div>
                        @Html.LabelFor(m => m.thumbnail, "Ảnh sản phẩm", new { @class = "block font-semibold mb-2" })
                        <div class="flex items-center space-x-6">
                            <img id="output" src="~/Image_Water/no-image-news.png" class="w-32 h-32 object-cover border rounded" alt="Preview" />
                            <div>
                                <label for="ufile" class="cursor-pointer bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                                    Chọn ảnh
                                </label>
                                <input name="ImageFile" id="ufile" type="file" class="hidden" onchange="loadFile(event)" />
                                @Html.ValidationMessageFor(m => m.thumbnail, "", new { @class = "text-red-500 text-sm block mt-2" })
                            </div>
                        </div>
                    </div>

                    <div>
                        @Html.LabelFor(m => m.category, "Danh mục", new { @class = "block font-semibold mb-1" })
                        @Html.TextBoxFor(m => m.category, new { @class = "w-full border rounded p-2 focus:ring-2 focus:ring-blue-500" })
                        @Html.ValidationMessageFor(m => m.category, "", new { @class = "text-red-500 text-sm" })
                    </div>

                    <div class="flex items-center space-x-2">
                        @Html.CheckBoxFor(m => m.status, new { @class = "w-4 h-4 text-blue-600" })
                        @Html.LabelFor(m => m.status, "Còn hàng", new { @class = "font-semibold" })
                    </div>

                    <div class="flex justify-end space-x-3 pt-4">
                        <a href="@Url.Action("Index", "Products")" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Quay lại</a>
                        <input type="submit" value="Thêm sản phẩm" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 cursor-pointer" />
                    </div>
                </div>
            }
        </div>
    </main>

    <script>
        const loadFile = (event) => {
            const image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
