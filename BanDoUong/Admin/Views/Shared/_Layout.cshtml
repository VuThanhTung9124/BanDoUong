<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Sidebar -->
    <aside class="w-64 bg-gray-800 text-white flex flex-col fixed h-full">
        <div class="p-4 text-center text-2xl font-bold border-b border-gray-700">
            Dashboard
        </div>
        @{
            string currentController = ViewContext.RouteData.Values["controller"].ToString();
        }
        <nav class="flex-1 p-4 space-y-2">
            <a href="@Url.Action("Index", "Products")" class="block px-3 py-2 rounded font-semibold
        @(currentController == "Products" ? "bg-gray-700 border-l-4 border-blue-500" : "hover:bg-gray-700")">
                Sản phẩm
            </a>
            <a href="@Url.Action("Index", "Orders")" class="block px-3 py-2 rounded
        @(currentController == "Orders" ? "bg-gray-700 border-l-4 border-blue-500" : "hover:bg-gray-700")">
                Đơn hàng
            </a>
            <a href="@Url.Action("Index", "Accounts")" class="block px-3 py-2 rounded
        @(currentController == "Accounts" ? "bg-gray-700 border-l-4 border-blue-500" : "hover:bg-gray-700")">
                Người dùng
            </a>
            <a href="#" class="block px-3 py-2 rounded hover:bg-gray-700">Thống kê</a>
        </nav>

        <div class="p-4 border-t border-gray-700 text-sm text-center">
            © Vũ Thanh Tùng
        </div>
    </aside>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
